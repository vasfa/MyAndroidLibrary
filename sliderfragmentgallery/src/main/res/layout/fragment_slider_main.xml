<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ir.mlibs.sliderfragmentgallery.ViewPagerCustomDurationFragment
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </ir.mlibs.sliderfragmentgallery.ViewPagerCustomDurationFragment>
        <slider_custom_textview.IRANSansMobile_BoldFontTextView
            android:id="@+id/TextView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#fff"
            android:background="@drawable/position_gradient"
            android:padding="10dp"
            android:visibility="gone"
            android:gravity="center"
            android:text="Title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/position_gradient_top"
            android:layout_height="wrap_content">
            <TextSwitcher
                android:id="@+id/textSwitcherposition"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="1000"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="#fff" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextSwitcher
                    android:id="@+id/textSwitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="1000"
                    android:layout_gravity="right"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorViewInside"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:piv_animationType="worm"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_selectedColor="#fff"
            app:piv_unselectedColor="#606060"
            app:piv_viewPager="@id/view_pager"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ImageView_pre"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pre_pic"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ImageView_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/next_pic"
                />
        </LinearLayout>

    </RelativeLayout>


    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator2"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="48dp"
        app:ci_height="6dp"
        android:visibility="gone"
        app:ci_margin="6dp"
        app:ci_width="6dp"/>
    <com.rd.PageIndicatorView
        android:id="@+id/pageIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:piv_animationType="worm"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="#fff"
        app:piv_unselectedColor="#606060"
        app:piv_viewPager="@id/view_pager"
        android:layout_marginBottom="3dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:visibility="visible"
        />
    <slider_custom_textview.IRANSansMobileFontTextView
        android:id="@+id/TextView_position"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text=""
        android:padding="10dp"
        android:background="@drawable/position_gradient"
        android:textColor="#fff"
        android:visibility="gone"
        android:layout_height="wrap_content"/>




</LinearLayout>