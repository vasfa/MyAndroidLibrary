<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <slider_custom_textview.IRANSansMobile_BoldFontTextView
        android:id="@+id/TextView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#fff"
        android:background="@drawable/position_gradient"
        android:padding="10dp"
        android:visibility="gone"
        android:gravity="center"
        android:text="Title"/>
    <TextSwitcher
        android:id="@+id/textSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/position_gradient"
        android:gravity="center"
        android:text="1000"
        android:padding="20dp"
        android:textColor="#fff" />
    <ir.mlibs.sliderfragmentgallery.ViewPagerCustomDurationFragment
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </ir.mlibs.sliderfragmentgallery.ViewPagerCustomDurationFragment>
    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator2"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="48dp"
        app:ci_height="6dp"
        android:visibility="gone"
        app:ci_margin="6dp"
        app:ci_width="6dp"/>
    <slider_custom_textview.IRANSansMobileFontTextView
        android:id="@+id/TextView_position"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text=""
        android:padding="10dp"
        android:background="@drawable/position_gradient"
        android:textColor="#fff"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
    <TextSwitcher
        android:id="@+id/textSwitcherposition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/position_gradient"
        android:gravity="center"
        android:text="1000"
        android:padding="20dp"
        android:textColor="#fff" />

</LinearLayout>