<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="OptRoundCardView">
        <item name="optRoundCardCornerRadius">@dimen/opt_round_card_view_default_radius</item>
        <item name="optRoundCardElevation">@dimen/opt_round_card_view_default_elevation</item>
        <item name="optRoundCardMaxElevation">@dimen/opt_round_card_view_default_elevation</item>
        <item name="optRoundCardUseCompatPadding">false</item>
        <item name="optRoundCardPreventCornerOverlap">true</item>
    </style>
    <style name="OptRoundCardView.DayNight">
    </style>
    <style name="OptRoundCardView.Light">
        <item name="optRoundCardBackgroundColor">@color/opt_round_card_view_light_background</item>
    </style>
    <style name="OptRoundCardView.Dark">
        <item name="optRoundCardBackgroundColor">@color/opt_round_card_view_dark_background</item>
    </style>
</resources>
